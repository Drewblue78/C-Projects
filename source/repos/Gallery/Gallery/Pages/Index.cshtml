@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

    <div class="text-center">
        <div class="text-center">
            <form method="post" enctype="multipart/form-data">
                <input name="uploader" placeholder="your name" />
                <input name="UploadedFile" type="file" asp-for="UploadedFile" />
                <input type="submit" />
            </form>
            <div class="list-group">
                @foreach (var f in Model.fileList) {
                    <a href="/uploads/@f.name" class="list-group-item list-group-item-action">@f.name</a>
                    @if (f.isImage) {
                        <img class="uploaded" src="uploads/@f.name" />
                    }

                }
            </div>
        </div>
    </div>


